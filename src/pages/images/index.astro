---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl text-white">Imagenes</h1>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    alt=""
    width="250"
    height="250"
  />

  <Image
    src={post05Img}
    style={{ width: "250px", height: "250px" }}
    alt="Imagen del post"
    width="500"
    height="500"
  />

  <h1>Quality low</h1>
  <Image
    quality="low"
    src={post05Img}
    alt="Imagen del post"
    width="250"
    height="250"
  />

  <h1>Quality high</h1>
  <Image
    quality="high"
    src={post05Img}
    alt="Imagen del post"
    width="250"
    height="250"
  />

  <h1>Formatos</h1>
  <Image
    src={post05Img}
    alt="Imagen del post"
    format="jpg"
    width="250"
    height="250"
  />

  <h1>Picture</h1>

  <!-- formats={['webp', 'avif', 'jpeg', 'png']} -->
  <!-- widths={[240, 540, 720, post05Img.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} -->
  <!-- width={post05Img.width / 2}
  densities={[1.5, 2]} -->
  <Picture
    src={post05Img}
    formats={["webp", "avif", "jpeg"]}
    alt="Imagen del post"
    width="250"
    height="250"
  />

  <div
    style={{
      height: "3000px",
    }}
  >
  </div>

  <img
    loading="lazy"
    src="/assets/images/post-01.png"
    alt=""
    width="250"
    height="250"
  />
</MainLayout>

<style>
  @reference 'tailwindcss';
  h1 {
    @apply text-white mt-10;
  }
</style>
